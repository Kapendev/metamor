{
	"name" : "metamor",
	"description" : "A cute visual novel made with the D programming language.",
	"authors" : ["Alexandros F. G. Kapretsos"],
	"copyright" : "Copyright Â© 2024, Alexandros F. G. Kapretsos",
	"license" : "MIT",
	"dependencies" : {},
	"configurations": [
		{
			"name": "linux_app",
			"targetType": "executable",
			"platforms": [
				"linux"
			],
			"dflags": ["-betterC"],
			"libs": [
				"raylib",
				"GL",
				"m",
				"pthread",
				"dl",
				"rt",
				"X11"
			],
			"lflags": [
				"-L.",
				"-rpath=$$ORIGIN"
			]
		},
		{
			"name": "windows_app",
			"targetType": "executable",
			"platforms": [
				"windows"
			],
			"dflags": ["-betterC"],
			"libs": [
				"raylibdll"
			]
		},
		{
			"name": "macos_app",
			"targetType": "executable",
			"platforms": [
				"osx"
			],
			"dflags": ["-betterC"],
			"libs": [
				"raylib.500"
			],
			"lflags": [
				"-L.",
				"-rpath",
				"@executable_path/"
			]
		}
	]
}
